      {/* CTA Section */}
      <Container maxWidth="md" sx={{ py: 10, textAlign: "center" }}>
        <Paper
          elevation={8}
          sx={{
            p: 6,
            borderRadius: 4,
            background: "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
