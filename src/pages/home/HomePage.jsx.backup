                                  {location.ville}
                                </Typography>
                              </Box>
                              <Box display="flex" alignItems="center" gap={1}>
                                <SquareFoot fontSize="small" sx={{ color: location.gradient[0] }} />
                                <Typography variant="body2" fontWeight="500" sx={{ fontSize: "0.75rem" }}>
                                  {location.superficie} m¬≤ ‚Ä¢ {location.chambres} chambre{location.chambres > 1 ? 's' : ''}
                                </Typography>
                              </Box>
                              <Box display="flex" alignItems="center" gap={1}>
                                <CheckCircle fontSize="small" sx={{ color: "success.main" }} />
                                <Typography variant="body2" color="success.main" fontWeight="600" sx={{ fontSize: "0.75rem" }}>
                                  Disponible : {location.disponibilite}
                                </Typography>
                              </Box>
                            </Stack>

                            <Divider sx={{ my: 1.5 }} />
                            
                            <Box display="flex" justifyContent="space-between" alignItems="center" mb={2}>
                              <Typography variant="h6" fontWeight="bold" sx={{ 
                                color: location.gradient[0],
                                fontSize: "1.2rem"
                              }}>
                                {formatMoney(location.prix)}
                              </Typography>
                              <Typography variant="body2" color="text.secondary" fontWeight="500" sx={{ fontSize: "0.75rem" }}>
                                /mois
                              </Typography>
                            </Box>

                            <Button
                              fullWidth
                              variant="contained"
                              size="small"
                              endIcon={<ArrowForward />}
                              onClick={() => navigate("/login")}
                              sx={{
                                background: `linear-gradient(135deg, ${location.gradient[0]} 0%, ${location.gradient[1]} 100%)`,
                                color: "white",
                                fontWeight: "bold",
                                py: 1,
                                borderRadius: 2,
                                textTransform: "none",
                                fontSize: "0.85rem",
                                "&:hover": {
                                  transform: "translateY(-1px)",
                                  boxShadow: `0 4px 12px ${location.gradient[0]}40`,
                                },
                                transition: "all 0.3s ease"
                              }}
                            >
                              Voir la location
                            </Button>
                          </CardContent>
                        </Card>
                      </Grid>
                    ))}
                </Grid>

                {/* Pagination */}
                {totalPages > 1 && (
                  <Box display="flex" justifyContent="center" mt={4}>
                    <Pagination
                      count={totalPages}
                      page={currentPage}
                      onChange={handlePageChange}
                      color="primary"
                      size="large"
                      sx={{
                        "& .MuiPaginationItem-root": {
                          fontSize: "1rem",
                          fontWeight: "bold",
                        },
                      }}
                    />
                  </Box>
                )}
              </>
            )}
          </Box>
        </Box>
      </Drawer>

    </PageLayout>
  );
};

export default HomePage;
